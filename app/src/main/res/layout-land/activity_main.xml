<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.MainActivity">

    <Button
        android:id="@+id/button_reset"
        android:layout_width="155dp"
        android:layout_height="58dp"
        android:layout_marginStart="88dp"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="16dp"
        android:text="@string/reset"
        android:textColor="@color/black"
        app:cornerRadius="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/view3"
        app:layout_constraintHorizontal_bias="0.066"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_team_a_score"
        app:layout_constraintVertical_bias="0.818" />

    <TextView
        android:id="@+id/textView_team_a_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="16dp"
        android:text="@string/zero"
        android:textColor="#774906"
        android:textSize="36sp"
        android:visibility="visible"
        app:layout_constraintStart_toEndOf="@+id/imageView"
        app:layout_constraintTop_toBottomOf="@+id/textView_team_a_name" />

    <Button
        android:id="@+id/button_team_b_three_points"
        android:layout_width="155dp"
        android:layout_height="58dp"
        android:layout_marginEnd="16dp"
        android:text="@string/three_points"
        android:textColor="@color/black"
        app:cornerRadius="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/button_team_a_three_points" />

    <Button
        android:id="@+id/button_team_b_two_points"
        android:layout_width="155dp"
        android:layout_height="58dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:text="@string/two_points"
        android:textColor="@color/black"
        app:cornerRadius="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_team_b_three_points" />

    <Button
        android:id="@+id/button_team_b_free_throw"
        android:layout_width="155dp"
        android:layout_height="58dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="24dp"
        android:text="@string/free_throw"
        android:textColor="@color/black"
        app:cornerRadius="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_team_b_two_points"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/button_team_a_three_points"
        android:layout_width="155dp"
        android:layout_height="58dp"
        android:layout_marginTop="16dp"
        android:clickable="true"
        android:text="@string/three_points"
        android:textColor="@color/black"
        app:cornerRadius="5dp"
        app:layout_constraintStart_toStartOf="@+id/button_team_a_two_points"
        app:layout_constraintTop_toBottomOf="@+id/textView_game_date" />

    <Button
        android:id="@+id/button_team_a_two_points"
        android:layout_width="155dp"
        android:layout_height="58dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="@string/two_points"
        android:textColor="@color/black"
        app:cornerRadius="5dp"
        app:layout_constraintStart_toEndOf="@+id/view3"
        app:layout_constraintTop_toBottomOf="@+id/button_team_a_three_points" />

    <Button
        android:id="@+id/button_team_a_free_throw"
        android:layout_width="155dp"
        android:layout_height="58dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="24dp"
        android:text="@string/free_throw"
        android:textColor="@color/black"
        app:cornerRadius="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/button_team_a_two_points"
        app:layout_constraintTop_toBottomOf="@+id/button_team_a_two_points"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textView_team_b_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="50dp"
        android:text="@string/zero"
        android:textColor="#774906"
        android:textSize="36sp"
        app:layout_constraintEnd_toStartOf="@+id/imageView2"
        app:layout_constraintTop_toBottomOf="@+id/textView_team_b_name" />

    <TextView
        android:id="@+id/textView_team_a_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:layout_marginTop="24dp"
        android:text="@string/team_a"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_game_date" />

    <TextView
        android:id="@+id/textView_team_b_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="48dp"
        android:text="@string/team_b"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintEnd_toStartOf="@+id/view3"
        app:layout_constraintTop_toBottomOf="@+id/textView_game_date" />

    <View
        android:id="@+id/view3"
        android:layout_width="3dp"
        android:layout_height="200dp"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="24dp"
        android:background="#4B000000"
        android:backgroundTint="@color/black"
        app:layout_constraintBottom_toBottomOf="@+id/button_reset"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_game_date"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textView_game_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:padding="10dp"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="#774906"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.167"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Feb 14, 2021" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView_team_a_score"
        app:srcCompat="@drawable/ic_baseline_sports_basketball_24" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toStartOf="@+id/view3"
        app:layout_constraintTop_toTopOf="@+id/textView_team_b_score"
        app:srcCompat="@drawable/ic_baseline_sports_basketball_24" />

</androidx.constraintlayout.widget.ConstraintLayout>